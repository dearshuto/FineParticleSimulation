%
\def\title#1{
\begin{center}
\begin{tabular}{c}
 {\Large {\bf #1}\footnotemark} \\
\omit \hskip 0.8\textwidth \\
\end{tabular}\\%
\end{center}
\vspace{0.3cm}
}

\def\2ltitle#1#2{
\begin{center}
\begin{tabular}{c}
{\Large {\bf #1}} \\
{\Large {\bf #2}\footnotemark} \\
\omit \hskip 0.8\textwidth \\
\end{tabular}\\%
\end{center}
\vspace{0.3cm}
}


